[package]
version = "0.0.0"
category = "Testing"
title = "HdRemix Test Environment"

readme  = """
HdRemix Test Environment
"""

changelog = """
# Changelog
The format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/).

## [0.0.0] - 2024-05-20
### Added
- Created
"""

description = """
Kit application used solely for lightweight-kit-environment testing of HdRemix
"""

# That makes it browsable in UI with "experience" filter
keywords = ["app"]

[dependencies]
"lightspeed.hydra.remix.core" = { order = -10000 }
"omni.kit.viewport.bundle" = { order = 1 }
"omni.usd" = { order = 2 }
"omni.kit.scripting" = { order = 3 }

[settings.app.window]
title = "HdRemix Test Environment"
width = 1920
height = 1080

# Register extension folder from this repo in kit
[settings.app.exts]
folders.'++' = ["${app}/../exts", "${app}/../extscache"]


