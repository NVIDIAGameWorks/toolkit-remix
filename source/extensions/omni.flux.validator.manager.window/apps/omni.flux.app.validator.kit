	"omni.flux.utils.common-2.18.0",
	"omni.flux.utils.widget-1.16.1",
	"omni.flux.validator.factory-2.7.0",
	"omni.flux.validator.manager.core-1.17.8",
	"omni.flux.validator.manager.widget-1.6.5",
	"omni.flux.validator.manager.window-1.11.20",
]

