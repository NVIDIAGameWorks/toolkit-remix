{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Process: Attach (windows-x86_64)",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
		{
            "name": "Python: Attach (windows-x86_64/linux-x86_64)",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "port": 3000,
            "host": "localhost",
            "subProcess": true,
            "runtimeArgs": [
                "--preserve-symlinks",
                "--preserve-symlinks-main"
            ]
        },
        {
            "name": "omni.app.lightspeed (debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build/windows-x86_64/debug/kit/kit.exe",
            "args": ["${workspaceFolder}/_build/windows-x86_64/debug/apps/omni.app.lightspeed.kit"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "linux": {
                "type": "cppdbg",
                "program": "${workspaceFolder}/_build/target-deps/kit_sdk_release/kit",
                "cwd": "${workspaceFolder}/_build/linux-x86_64/debug/",
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
        },
        {
            "name": "omni.app.lightspeed (release)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build/windows-x86_64/release/kit/kit.exe",
            "args": ["${workspaceFolder}/_build/windows-x86_64/release/apps/omni.app.lightspeed.kit"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "linux": {
                "type": "cppdbg",
                "program": "${workspaceFolder}/_build/target-deps/kit_sdk_release/kit",
                "cwd": "${workspaceFolder}/_build/linux-x86_64/release/",
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
        },
    ]
}
